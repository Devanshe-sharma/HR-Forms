{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "useDefineForClassFields": true,

    "module": "ESNext",
    "moduleResolution": "bundler",

    "allowJs": false,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,

    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,

    "jsx": "react-jsx",
    "types": ["node", "vite/client"]
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
